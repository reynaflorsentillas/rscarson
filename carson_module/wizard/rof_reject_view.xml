            <form string="Reject Requisition Order">
                <group>
                    <field name="rof_id" invisible="1"/>
                    <field name="reason" />
                </group>
                <footer>
                    <button name="apply" string="Apply" type="object" default_focus="1" class="oe_highlight"/>
                    or
                    <button special="cancel" string="Cancel"/>
                </footer>
            </form>
        </field>
    </record>

